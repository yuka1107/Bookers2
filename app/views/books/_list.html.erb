<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag(user, :profile_image,fallback: "no_image.jpg",size: "63x63") %>
  <table class="table">
    <tbody>
      <tr>
	      <td>name</td>
	      <td><%= user.name %></td>
      </tr>
      <tr>
	      <td>introduction</td>
	      <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>

<div class="row">
  <%= link_to(edit_user_path(user.id),class: "btn btn-defalut w-100 border-secondary") do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<h2 class="mt-3">New book</h2>
  <%= form_with(model: book,url: "/books#create",local: true,method: :post) do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.label :title %>
  </div>
  <br>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.label :body %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book",class: "btn btn-success" %>
  </div>
</div>