<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj form being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">

    <%= render(partial: 'layouts/leftsidebar',locals: {user: @user}) %>

    <div class="col-md-8 offset-md-1">
      <h2 class="mt-4 mb-2">Books</h2>
      <table class="table table-word-wrap" >
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <% user = User.find(book.user_id) %>
            <tr>
              <td>
                <%= link_to(user_path(user.id)) do %>
                  <%= attachment_image_tag(user, :profile_image,fallback: "no_image.jpg",size: "50x50") %>
                <% end %>
              </td>
              <td><%= link_to(book.title,book_path(book.id)) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

