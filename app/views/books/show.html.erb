<%= notice %>

<<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render(partial: 'layouts/leftsidebar',locals: {user: @user}) %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>

      <table class="table">
        <tbody>
          <% user = User.find(@book.user_id) %>
          <tr>
            <td>
              <%= attachment_image_tag(user, :profile_image, fallback: "no_image.jpg",size: "40x40") %><br>
              <%= link_to(user.name,user_path(user.id)) %>
            </td>
            <td><%= link_to(@book.title,book_path(@book.id)) %></td>
            <td><%= @book.body %></td>
            <% if user_signed_in? && current_user.id == @book.user_id %>
              <td><%= link_to("Edit",edit_book_path(@book.id),class: "btn btn-success") %></td>
              <td><%= link_to("Destroy",book_path(@book.id),method: :delete,data:{confirm: "本当に消しますか？"},class: "btn btn-danger") %></td>
            <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>