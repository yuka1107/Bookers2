<%= notice %>
 <% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this user formbeing saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render(partial: 'layouts/leftsidebar',locals: {user: @user}) %>
    </div>  

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        
        <tbody>
          <% books = Book.where(user_id: @user.id) %>
          <% books.each do |book| %>
          <tr>
            <td>
              <%= link_to(user_path(@user.id)) do %>
              <%= attachment_image_tag(@user, :profile_image,fallback: "no_image.jpg",size: "40x40") %>
              <% end %>
            <td>
              <%= link_to(book.title,book_path(book.id)) %>
              
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
</div>