<div class="container">

  <div class="row ml-2">
    <div class="col-11 col-sm-10 col-lg-8 col-xl-6 mt-4 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj form being saved:
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      
      <%= form_with(model: @user,local: true) do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= f.text_field :name,class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image,class: "form-control-file" %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction,class: "form-control" %>
        </div>
        <%= f.submit "Update User",class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>